<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="#ffffff"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/iv_new_head_portrait"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:background="@drawable/iv_head_portrait_bg"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_new_head_portrait"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_new_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_new_head_portrait"
            android:text="美女"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_new_friend_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="8dp"
            android:text="你好"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_ignore"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:text="忽略"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="gone" />

    <Button

        android:id="@+id/btn_agree"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/btn_ignore"
        android:background="@android:color/holo_green_light"
        android:text="接受"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
</RelativeLayout>