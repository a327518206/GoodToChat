<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fitsSystemWindows="true">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:background="@android:color/black"
                android:fitsSystemWindows="true" />


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="好有消息"
                android:textColor="#ffffff"
                android:textSize="18sp" />
            <ImageButton
                android:scaleType="fitXY"
                android:id="@+id/ib_add_to"
                android:layout_marginRight="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ib_add_to"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fl_main_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <RadioGroup
            android:id="@+id/rg_bottom_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#11000000"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="8dp">


            <RadioButton
                android:id="@+id/rb_message"
                style="@style/rb_style"
                android:drawableTop="@drawable/rb_message_selector"
                android:text="消息" />

            <RadioButton
                android:id="@+id/rb_address_list"
                style="@style/rb_style"
                android:drawableTop="@drawable/rb_address_list_selector"
                android:text="通讯录" />

            <RadioButton
                android:id="@+id/rb_my_setting"
                style="@style/rb_style"
                android:drawableTop="@drawable/rb_my_setting_selector"
                android:text="我" />


        </RadioGroup>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
